{
  "name": "fitness-tracker-app",
  "version": "1.0.0",
  "description": "A fitness data tracker application.",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.app.json && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"sleep 5 && npm run start-electron\"",
    "start-electron": "npm run build-electron && electron .",
    "build-electron": "tsc -p tsconfig.electron.json",
    "dist": "npm run build && npm run build-electron && electron-builder",
    "cap:init": "cap init fitness-tracker com.yourcompany.fitnesstracker --web-dir=dist",
    "cap:sync": "npm run build && cap sync",
    "cap:add:android": "cap add android",
    "cap:open:android": "cap open android",
    "tailwind:init": "tailwindcss init -p"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@types/nedb": "^1.8.16",
    "nedb": "^1.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.3.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.4",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.0.2",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yourcompany.fitnesstracker",
    "productName": "Fitness Tracker",
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.healthcare-fitness"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ]
  }
}
